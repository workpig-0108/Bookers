<h4 class=b>Books</h4>

<table style="border:none">
   <thead>
      <tr>
      <th>Title</th>
       <th>Body</th>
       <th colspan="3"></th>
   </tr>
  </thead>
  <tbody>
  	<% @books.each do |book| %>
  	<tr>
  		<td><%= book.title %></td>
  		<td><%= book.body %></td>
  		 <td><%= link_to 'Show', book_path(book.id), class:"show_#{book.id}" %></td>
         <td><%= link_to "Edit", edit_book_path(book.id), class:"edit_#{book.id}" %></td>
        <td><%= link_to 'Destroy', book_path(book.id), method: :delete, data: { confirm: "Are you sure?" }, class:"destroy_#{book.id}" %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<h3>New Book</h3>
<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@book) do |f| %>
    <h6 class=b>Title</h6>
    <%= f.text_field :title %>
    <h6 class=b>Body</h6>
    <%= f.text_area :body %>
<br>
    <%= f.submit 'Create Book' %>

